{
  "name": "chat-stdlib",
  "packageManager": "yarn@4.3.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn tsc",
    "dev": "yarn build --watch --preserveWatchOutput",
    "lint": "yarn eslint src --ext js,ts",
    "test": "yarn jest",
    "watch": "yarn concurrently --kill-others \"yarn watch-build\" \"yarn watch-tests\"",
    "watch-build": "yarn tsc --watch --preserveWatchOutput",
    "watch-tests": "yarn jest --watch"
  },
  "license": "NOLICENSE",
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.8.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^8",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^7.17.0"
  }
}
